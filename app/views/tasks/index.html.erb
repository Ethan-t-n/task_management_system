<!DOCTYPE html>
<html>
<head>
  <title>Task Management System</title>
  <link rel="stylesheet" type="text/css" href="/assets/application.css">
  <style>
    .container {
      position: relative;
      margin-bottom: 50px;
    }

    .clear-all-button {
      position: absolute;
      bottom: 0;
      right: 0;
      margin: 10px;
    }

    .task-table {
      width: 100%;
      border-collapse: collapse;
    }

    .task-table th,
    .task-table td {
      padding: 8px;
      border: 1px solid #000000;
    }

    .task-table th {
      background-color: #C1C0C0;
      font-weight: bold;
    }

    .task-table tr:nth-child(even) {
      background-color: #8193e8;
    }

    .task-table tr:nth-child(odd) {
      background-color: #f9f9f9; 
    }

    .task-table tr:hover {
      background-color: #e6e6e6;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Task List</h1>

      <% if @tasks.any? %>
      <table class="task-table">
        <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Description</th>
          <th>Time Start</th>
          <th>Time End</th>
          <th>Completed</th>
        </tr>
      <% end %>
      </thead>
      <tbody>
        <% @tasks.each.with_index(1) do |task, index| %>
          <tr class="<%= task.completed? ? 'completed' : '' %>">
          <td><%= index %></td>
            <td><%= task.name %></td>
            <td><%= task.description %></td>
            <td><%= task.time_start.strftime("%H:%M") if task.time_start %></td>
            <td><%= task.time_end.strftime("%H:%M") if task.time_end %></td>
            <td><%= task.completed ? 'Yes' : 'No' %></td>
            <td><%= link_to 'Show', task %></td>
            <td><%= link_to 'Edit', edit_task_path(task) %></td>
            <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <p><%= link_to 'New Task', new_task_path %></p>
  </div>
    <%= button_to 'Clear All Tasks', clear_all_tasks_path, method: :delete, data: { confirm: 'Are you sure you want to delete all tasks?' }, class: 'clear-all-button' %>
</body>
</html>


