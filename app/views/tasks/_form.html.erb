<div class="bg-white p-6 rounded-lg shadow">
  <%= form_with(model: task, url: task.persisted? ? task_path(task) : tasks_path, local: true) do |form| %>
    <% if task.errors.any? %>
      <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <p class="font-bold"><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</p>
        <ul class="mt-2 list-disc list-inside">
          <% task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, class: 'block text-gray-700' %>
      <%= form.text_field :name, class: 'mt-1 block w-full border-gray-300 rounded-md' %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: 'block text-gray-700' %>
      <%= form.text_area :description, class: 'mt-1 block w-full border-gray-300 rounded-md' %>
    </div>

    <div class="mb-4">
      <%= form.label :time_start, class: 'block text-gray-700' %>
      <%= form.time_select :time_start, { include_blank: true, ampm: true }, { class: 'mt-1 block w-full border-gray-300 rounded-md' } %>
    </div>

    <div class="mb-4">
      <%= form.label :time_end, class: 'block text-gray-700' %>
      <%= form.time_select :time_end, { include_blank: true, ampm: true }, { class: 'mt-1 block w-full border-gray-300 rounded-md' } %>
    </div>

    <div class="mb-4 flex items-center">
      <%= form.check_box :completed, class: 'h-4 w-4 text-indigo-600 border-gray-300 rounded' %>
      <%= form.label :completed, class: 'ml-2 block text-gray-700' %>
    </div>

    <%= form.submit 'Save', class: 'px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600' %>
  <% end %>
</div>
