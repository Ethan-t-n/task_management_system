<%= form_with(model: task, url: task.persisted? ? task_path(task) : tasks_path, local: true) do |form| %>
  <% if task.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :time_start, class: 'form-label' %>
    <%= form.time_select :time_start, { include_blank: true, ampm: true }, { class: 'form-select d-inline w-auto' } %>
  </div>

  <div class="mb-3">
    <%= form.label :time_end, class: 'form-label' %>
    <%= form.time_select :time_end, { include_blank: true, ampm: true }, { class: 'form-select d-inline w-auto' } %>
  </div>

  <div class="form-check mb-3">
    <%= form.check_box :completed, class: 'form-check-input', id: 'task_completed' %>
    <%= form.label :completed, class: 'form-check-label', for: 'task_completed' %>
  </div>

  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>
