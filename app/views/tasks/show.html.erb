<h1 class="text-2xl font-bold mb-4 text-center">Task Details</h1>

<div class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow">
  <table class="w-full">
    <tbody class="divide-y">
      <tr>
        <th class="text-left py-2">Name</th>
        <td class="py-2"><%= @task.name %></td>
      </tr>
      <tr>
        <th class="text-left py-2">Description</th>
        <td class="py-2"><%= @task.description %></td>
      </tr>
      <tr>
        <th class="text-left py-2">Start Time</th>
        <td class="py-2"><%= @task.time_start&.strftime('%H:%M %p') || 'N/A' %></td>
      </tr>
      <tr>
        <th class="text-left py-2">End Time</th>
        <td class="py-2"><%= @task.time_end&.strftime('%H:%M %p') || 'N/A' %></td>
      </tr>
      <tr>
        <th class="text-left py-2">Status</th>
        <td class="py-2"><%= @task.completed? ? 'Done' : 'Pending' %></td>
      </tr>
    </tbody>
  </table>
  <div class="mt-4 space-x-2">
    <%= link_to 'Edit', edit_task_path(@task), class: 'px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600' %>
    <%= link_to 'Delete', @task, method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, class: 'px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600' %>
    <%= link_to 'Done', tasks_path, class: 'px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400' %>
  </div>
</div>
