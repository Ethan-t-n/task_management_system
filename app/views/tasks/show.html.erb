<h1 class="mb-4">Task Details</h1>

<table class="table table-bordered">
  <tbody>
    <tr>
      <th>Name</th>
      <td><%= @task.name %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @task.description %></td>
    </tr>
    <tr>
      <th>Start Time</th>
      <td><%= @task.time_start&.strftime('%H:%M %p') || 'N/A' %></td>
    </tr>
    <tr>
      <th>End Time</th>
      <td><%= @task.time_end&.strftime('%H:%M %p') || 'N/A' %></td>
    </tr>
    <tr>
      <th>Completed</th>
      <td><%= @task.completed ? 'Yes' : 'No' %></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary' %>
<%= link_to 'Delete', @task, method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, class: 'btn btn-danger ms-2' %>
<%= link_to 'Done', tasks_path, class: 'btn btn-secondary ms-2' %>
