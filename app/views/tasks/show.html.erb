<h1 class="mb-4 text-center">Task Details</h1>

<div class="card shadow">
  <div class="card-body">
    <table class="table table-borderless mb-0">
      <tbody>
        <tr>
          <th>Name</th>
          <td><%= @task.name %></td>
        </tr>
        <tr>
          <th>Description</th>
          <td><%= @task.description %></td>
        </tr>
        <tr>
          <th>Start Time</th>
          <td><%= @task.time_start&.strftime('%I:%M %p') || 'N/A' %></td>
        </tr>
        <tr>
          <th>End Time</th>
          <td><%= @task.time_end&.strftime('%I:%M %p') || 'N/A' %></td>
        </tr>
        <tr>
          <th>Status</th>
          <td>
            <span class="badge <%= @task.completed? ? 'bg-success' : 'bg-warning text-dark' %>">
              <%= @task.completed? ? 'Done' : 'Pending' %>
            </span>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="mt-3">
      <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary' %>
      <%= link_to 'Delete', @task, method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, class: 'btn btn-danger ms-2' %>
      <%= link_to 'Done', tasks_path, class: 'btn btn-secondary ms-2' %>
    </div>
  </div>
</div>

