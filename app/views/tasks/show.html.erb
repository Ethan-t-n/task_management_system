<div class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow">
  <h1 class="text-2xl font-semibold mb-2"><%= @task.name %></h1>
  <p class="text-gray-700 mb-2"><%= @task.description %></p>
  <p class="text-sm text-gray-500 mb-4"><%= @task.time_frame %></p>
  <span class="inline-block mb-4 px-2 py-1 text-xs rounded <%= @task.completed? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>"><%= @task.completed? ? 'Done' : 'Pending' %></span>
  <div class="flex space-x-3">
    <%= link_to 'Edit', edit_task_path(@task), class: 'text-indigo-600 hover:underline text-sm' %>
    <%= link_to 'Delete', @task, method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, class: 'text-red-600 hover:underline text-sm' %>
    <%= link_to 'Back', tasks_path, class: 'text-gray-600 hover:underline text-sm' %>
  </div>
</div>
